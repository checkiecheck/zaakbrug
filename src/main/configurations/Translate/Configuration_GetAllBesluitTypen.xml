<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="GetAllBesluitTypen"
        active="${GetAllBesluitTypen.Active}"
        description="">

        <Receiver name="GetAllBesluitTypen">
            <JavaListener name="GetAllBesluitTypen"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

			<SenderPipe name="GetAllBesluitTypen"
                getInputFromFixedValue="&lt;dummy/&gt;">
				<HttpSender 
					name="GetAllBesluitTypen" 
					methodType="GET"
                    headersParams="Authorization"
                    timeout="${zaakbrug.zgw.catalogi-api.timeout}"
				/>
                <Param name="url" value="${zaakbrug.zgw.catalogi-api.root-url}besluittypen"/>
                <Param name="Authorization" value="Bearer @@catalogi-api.jwt@@" />
                <Forward name="success" path="JsonToXml" />
                <Forward name="exception" path="ErrorJsonToXml" />
			</SenderPipe>
            <JsonPipe name="ErrorJsonToXml">
                <Forward name="success" path="buildErrorMsg" />
            </JsonPipe>
            <XsltPipe name="buildErrorMsg"
                styleSheetName="Common/xsl/ParseNegativeHttpResult.xsl">
                <Param name="senderPipeName" value="GetAllBesluitTypen" />
                <Forward name="success" path="EXCEPTION" />
            </XsltPipe>

            <JsonPipe name="JsonToXml">
                <Forward name="success" path="UnwrapOpenZaakApiEnvelopeToList"/>
            </JsonPipe>

            <XsltPipe name="UnwrapOpenZaakApiEnvelopeToList"
                styleSheetName="Common/xsl/UnwrapOpenZaakApiEnvelopeToList.xslt"
                >
                <Param name="Type" value="ZgwBesluitType"/>
                <Param name="List" value="ZgwBesluitTypen"/>
                <Forward name="success" path="EXIT"/>
                <Forward name="error" path="EXCEPTION"/>
            </XsltPipe>
        </Pipeline>
    </Adapter>
</Module>