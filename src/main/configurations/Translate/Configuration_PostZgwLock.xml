<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="PostZgwLock"
        active="${PostZgwLock.Active}"
        description="">

        <Receiver name="PostZgwLock">
            <JavaListener name="PostZgwLock"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>
            
            <SenderPipe name="PostZgwLock">
				<HttpSender 
					name="PostZgwLockSender" 
					methodType="POST"
					headersParams="Authorization,Accept-Crs"
                    timeout="${zaakbrug.zgw.documenten-api.timeout}"
                    truststore="${zaakbrug.zgw.documenten-api.truststore.url}"
                    truststoreType="${zaakbrug.zgw.documenten-api.truststore.type}"
                    truststoreAuthAlias="${zaakbrug.zgw.documenten-api.truststore.auth-alias}"
                    verifyHostname="${zaakbrug.zgw.documenten-api.verify-hostname}"
                    allowSelfSignedCertificates="${zaakbrug.zgw.documenten-api.allow-self-signed-cert}"
                    ignoreCertificateExpiredException="${zaakbrug.zgw.documenten-api.ignore-expired-cert}"
                    contentType="application/json"
				/>
                <Param name="url" sessionKey="ZgwLockUrl"/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer @@documenten-api.jwt@@"/>
                <Forward name="success" path="JsonToXml" />
                <Forward name="exception" path="EXCEPTION" />
			</SenderPipe>

            <JsonPipe name="JsonToXml">
                <Forward name="success" path="EXIT"/>
            </JsonPipe>
        </Pipeline>
    </Adapter>
</Module>
